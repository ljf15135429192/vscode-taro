{
	"name": "taro",
	"displayName": "taro",
	"description": "taro代码片段",
	"version": "0.0.7",
	"icon": "icon.png",
	"publisher": "jinfenglou",
	"repository": {
		"type": "git",
		"url": "https://github.com/ljf15135429192/vscode-taro.git"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Formatters",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onCommand:cxk.showReminderView",
		"onCommand:extension.taro",
		"onLanguage:html",
		"onLanguage:vue",
		"onLanguage:css",
		"onLanguage:less",
		"onLanguage:scss",
		"onLanguage:sass",
		"onLanguage:stylus"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.taro",
				"title": "taro"
			
			},
			{
				"command": "bald.showReminderView",
				"title": "bald"
	
		}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/taro.json"
			},
			{
				"language": "vue",
				"path": "./snippets/taro.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "taro-config",
			"properties": {		"taro.num": {
					"type": "number",
					"default": 2,
					"description": "px倍数"
				},
				"taro.config": {
					"type": "boolean",
					"default": false,
					"description": "是否开启px倍数转化?"
				},
				"bald.title": {
					"type": "string",
					"default": "还在写代码? 不怕秃头? 休息一会吧!!!",
					"description": "秃头提示文本:"
				},
				"bald.config": {
					"type": "boolean",
					"default": true,
					"description": "是否开启秃头提示?"
				}
			}
		}
	},

	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js",
		"build": "node ./snippets.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}